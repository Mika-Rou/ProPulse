  <div class="container">
    <% if notice %>
      <div class="w-100 alert alert-info alert-dismissible fade show" style="margin-top: -80px" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <%= notice %>
      </div>
    <% end %>
    <% if alert %>
      <div class="w-100 alert alert-warning alert-dismissible fade show" style="margin-top: -80px" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <%= alert %>
      </div>
    <% end %>
  </div>
