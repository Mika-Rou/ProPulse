<header class="p-3 fixed-top z-3 blend-mode">
  <div>
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 align-items-center mb-md-0">
        <%= image_tag 'logo.png', alt: 'logo', class:"rounded-circle", style:"width: 40px; height: 40px" %>
        <li><a href="/" class="px-2 title-hover fs-4 text-white"><strong>ProPulse</strong></a></li>
      </ul>

      <% if user_signed_in? %>
        <%= link_to '<i class="fa-solid fa-gauge"></i>'.html_safe, dashboard_path(current_user), class:"text-black btn btn-light me-2 rounded-5" %>
        <%= link_to '<i class="fa-solid fa-lock"></i>'.html_safe, destroy_user_session_path, data: {turbo_method: :delete}, class: "text-black btn btn-light rounded-5" %>
      </div>
      <% else %>
        <%= link_to '<i class="fa-solid fa-lock"></i>'.html_safe, new_user_session_path, class:"text-black btn btn-light rounded-5" %>
      <% end %>
  </div>
</header>
