<header class="p-3 fixed-top z-3">
  <div>
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none">
        <%#= image_tag "beer&beers.png", alt:"Logo", width:60, height:60, class:"d-inline-block align-text-top" %>
      </a>

      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 align-items-center mb-md-0">
        <%= image_tag 'logo.png', alt: 'logo', class:"rounded-circle", style:"width: 40px; height: 40px" %>
        <li><a href="/" class="nav-link px-2 link-body-emphasis title-hover fs-4 text-<%= white_mode ? "white" : "black" %>"><strong>ProPulse</strong></a></li>
      </ul>

      <% if user_signed_in? %>
        <%= link_to '<i class="fa-solid fa-gauge"></i>'.html_safe, dashboard_path(current_user), class:"text-#{white_mode ? 'black' : 'white'} btn btn-#{white_mode ? 'light' : 'dark'} me-2 rounded-circle" %>
        <%# <a href="/dashboard/" class="d-block link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
          <img src="https://images.unsplash.com/photo-1511367461989-f85a21fda167?q=80&w=1931&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="mdo" width="32" height="32" class="border border-3 border-light rounded-5 object-fit-cover">
        </a> %>
        <%= link_to '<i class="fa-solid fa-lock"></i>'.html_safe, destroy_user_session_path, data: {turbo_method: :delete}, class: "text-#{white_mode ? 'black' : 'white'} btn btn-#{white_mode ? 'light' : 'dark'} rounded-circle" %>
      </div>
      <% else %>
        <%= link_to '<i class="fa-solid fa-lock"></i>'.html_safe, new_user_session_path, class:"text-#{white_mode ? 'black' : 'white'} btn btn-#{white_mode ? 'light' : 'dark'} rounded-circle" %>
      <% end %>
  </div>
</header>
