<div class="card-test" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.5)), url('<%= image_path imgName, height: 500, width:500, crop: "fit" %>')">

    <p class="category-label">
      <%= raise @tests.count %> tests disponnibles
    </p>

    <div class="card-test-content">
      <h3 class="title-inter"> <%= title %> </h3>

      <p><%= description %></p>
      <%= link_to "Voir tous les tests", question_path(1), class:"btn-principal-white" %>
    </div>
</div>
