<div data-controller="jobs" class="list-group" id="job-list">
  <% if jobs.any? %>
    <% jobs.each_with_index do |job, i| %>
      <%= link_to job["name"], job_path(job, format: :turbo_stream),
        data: {
          turbo_stream: "",
          jobs_target: "link",
          action: "click->jobs#toggleActiveClass",
          job_index: i
        },
        class: "list-group-item mb-2 rounded-4 #{'list-group-item active' if i == 0}" %>
    <% end %>
  <% end %>
</div>
