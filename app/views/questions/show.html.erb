<div class="container py-5">

  <div class="card-product">
    <img src="" />
    <div class="card-product-infos">
      <p><%= @question.test.category %></p>
      <h2><%= @question.test.name %></h2>
    </div>
  </div>

    <div class="progress mt-4">
      <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
    </div>

    <h2><%= @question.question %></h2>

  <%= simple_form_for @user_answer do |f| %>
     <%= f.collection_radio_buttons :choice_id, @question.choices, :id, :choice %>
         <%= f.submit 'Question suivante', class: 'btn btn-primary rounded-3 px-4 py-3' %>
  <% end %>
</div>
