<div class="container pb-5 pt-2">

  <div class="d-flex gap-4">
    <%= image_tag 'img-test-1.png', class: "icon-width" %>

    <div class="d-flex flex-column gap-1 justify-content-center">
      <p>Cat√©gorie : <%= @question.test.category %></p>
      <h1 class="fs-1 fst-italic"><%= @question.test.name %></h1>
    </div>
  </div>

  <div class="progress mt-5">
    <div class="progress-bar" role="progressbar" style="width: <%= @progress %>%;" aria-valuenow="<%= @progress %>" aria-valuemin="0" aria-valuemax="100">
    </div>
  </div>

  <h3 class="title-inter my-5"><%= @question.position %>/<%= @test.questions.count %> - <%= @question.question %></h3>

  <div class="questions_form">
    <%= simple_form_for @user_answer do |f| %>

      <%= hidden_field_tag :question_id, @question.id %>

      <div class="form-grid">
        <%= f.collection_radio_buttons :choice_id, @question.choices, :id, :choice do |b| %>
            <%= b.radio_button(class: "radio-button") %>
            <%= b.label(class: "label-button") %>
        <% end %>
      </div>

      <div class="d-flex mt-5 justify-content-center">
        <% if @question == @test.questions.last %>
          <%= f.submit 'Valider le test', class: 'btn-principal' %>
        <% else %>
          <%= f.submit 'Question suivante', class: 'btn-principal' %>
        <% end %>
      </div>

    <% end %>
  </div>

</div>
